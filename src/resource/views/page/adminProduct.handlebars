	<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="index.html"><img src="/img/logo.png" alt=""></a>
					<button class="navbar-toggler" type="button" data-toggle="collapse"
						data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item "><a class="nav-link" href="/admin/add/product">Add Product</a></li>
							<li class="nav-item active"><a class="nav-link" href="/admin/products">Products</a></li>
							<li class="nav-item "><a class="nav-link" href="/admin/add/category">Add Category</a></li>
							<li class="nav-item submenu dropdown">
								<a href="/admin/categories" class="nav-link dropdown-toggle">Categories</a>

							</li>

						</ul>

					</div>
				</div>
			</nav>
		</div>
	</header>
	<!-- End Header Area -->
	<div class="table-products">
		<div class="container">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">STT</th>
						<th scope="col">Tên SP</th>
						<th scope="col">Ảnh</th>
						<th scope="col">Giá</th>
						<th scope="col">Giá sales</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody id="list-product">



				</tbody>
			</table>
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h2 class="modal-title fs-5" id="exampleModalLabel">Update Product</h2>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">x</button>
				</div>
				<div class="modal-body">
					<div class="form-edit">
						<div class="relative">
							<input name="serial" rules="required" type="text" id="name" class="" value="" />
							<label for="name" class="form-label">Tên sản phẩm</label>
						</div>

						<div class="relative">
							<input name="serial" rules="required" type="text" id="price" class="" value="" />
							<label for="price" class="form-label">Giá</label>
						</div>

						<div class="relative">
							<input name="serial" rules="required" type="text" id="price_sales" class="" value="" />
							<label for="price_sales" class="form-label">Giá sales</label>
						</div>

						<div class="relative">
							<label for="category_id" class="select">Danh mục</label>
							<select id="category_id">
							</select>

						</div>
						<input type="hidden" name="id">
						<input type="file" id="img" name="img" class="" />
						<label for="file-input" class="sr-only">Choose file</label>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="button" class="btn btn-addproduct" onclick="updateProduct(this)">Save changes</button>
				</div>
			</div>
		</div>
	</div>
</body>

