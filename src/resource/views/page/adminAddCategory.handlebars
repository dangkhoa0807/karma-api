	<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="index.html"><img src="/img/logo.png" alt=""></a>
					<button class="navbar-toggler" type="button" data-toggle="collapse"
						data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item "><a class="nav-link" href="/admin/add/product">Add Product</a>
							</li>
							<li class="nav-item"><a class="nav-link" href="/admin/products">Products</a></li>
							<li class="nav-item active"><a class="nav-link" href="/admin/add/category">Add Category</a>
							</li>
							<li class="nav-item submenu dropdown">
								<a href="/admin/categories" class="nav-link dropdown-toggle">Categories</a>

							</li>

						</ul>

					</div>
				</div>
			</nav>
		</div>
	</header>
	<!-- End Header Area -->
	<div class="container ">
		<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
		<script>
			async function create() {
				const name = document.querySelector("#name").value;
				const formData = new URLSearchParams();
				formData.append("name", name);
				try {
					const response = await axios.post("/admin/add/category", formData);

						if (response.status === 200) {
							window.location.href = "/admin/categories";
						} else {
							alert(response.data.msg || "Lấy dữ liệu thất bại");
						}
				} catch (error) {
					console.error(error);
					alert("Có lỗi xảy ra khi gửi request");
				}
			}
		</script>
		<div class="form-add-product">
			<div class="relative">
				<input name="serial" rules="required" type="text" id="name" class="" value="" />
				<label for="name" class="form-label">Tên Danh Mục</label>
			</div>

			<button class="btn btn-addproduct" type="button" onclick="create()">Thêm Danh Mục</button>
		</div>
	</div>

</body>

